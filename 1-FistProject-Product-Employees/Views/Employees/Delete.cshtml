@model Employee
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Supprimer Un Employé</h1>
<h5> Voulez vous vraiment supprimer l'employé :
    <span class="text-primary">@Model.EmployeeName  </span>
</h5>

<form asp-action="Delete" asp-controller="Employees" method="post">
    @Html.HiddenFor(m => m.EmployeeId)
    <div>
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        <a asp-action="Index" asp-controller="Employees" class="btn btn-outline-warning">Annuler</a>
    </div>
</form>
