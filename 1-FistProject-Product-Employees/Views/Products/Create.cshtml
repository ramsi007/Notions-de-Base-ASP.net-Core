

@model Product

@{
    ViewData["Title"] = "Create";
}

<h1>Ajouter un Produit</h1>

<form asp-action="Create" asp-controller="Products" method="post">
    <table class="table table-hover table-bordered table-triped">

        <tr>
            <td>@Html.DisplayNameFor(x => x.ProductName)</td>
            <td>
                <input asp-for="ProductName" class="input-group" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </td>
        </tr>

        <tr>
            <td>@Html.DisplayNameFor(x => x.Price)</td>
            <td>
                <input asp-for="Price" class="input-group" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </td>
        </tr>

        <tr>
            <td>@Html.DisplayNameFor(x => x.Quantity)</td>
            <td>
                <input asp-for="Quantity" class="input-group" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="save" class="btn btn-outline-primary" />
                <a asp-action="Index" asp-controller="Products" class="btn btn-success">cancel</a>
            </td>
 
        </tr>
    </table>
</form>

