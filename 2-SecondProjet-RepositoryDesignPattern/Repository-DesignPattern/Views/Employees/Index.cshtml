@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Ajouter Des employées</h1>

<p>
    <a asp-action="Create" class="text-right btn btn-outline-dark">Ajouter Un nouveau Employé</a>
</p>

<div class="form-group">
    <form asp-action="Index" methode="Post">
        <input name="term" id="term" placeholder="rechercher ..." class="input-group" />
        <p></p>
        <input type="submit" value="Chercher" class="btn btn-dark" />
    </form>
</div>


<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-sm">Plus ...</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Modifier</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
