@model IEnumerable<Slider>

without Cach
@DateTime.Now

<br />

with Cach
<cache expires-after="@TimeSpan.FromSeconds(10)">
    @DateTime.Now
</cache>

<br />
// tu dois attendre 10 secondes sans refraichir la page pour qu'il fait un cach
// cach c-à-dire , il vide la cache
<cache expires-sliding="@TimeSpan.FromSeconds(10)">
    @DateTime.Now
</cache>

<br />
// là il vas pas vider la cache qu'au 23/12/2020 à 12h:00
<cache expires-on="@new DateTime(2020,12,29,12,0,0)">
    @DateTime.Now
</cache>





